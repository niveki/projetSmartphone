<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="10px"
            android:layout_height="wrap_content"
            android:id="@+id/setting_text_IP"
            android:layout_marginTop="30px"
            android:layout_marginLeft="15px"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setting_set_IP"
            android:inputType="number|numberDecimal"
            android:digits="0123456789."
            android:maxLength="15"
            android:text=""
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="10px"
            android:layout_height="wrap_content"
            android:id="@+id/setting_text_port"
            android:layout_marginTop="30px"
            android:layout_marginLeft="15px"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setting_set_port"
            android:inputType="number|numberDecimal"
            android:digits="0123456789."
            android:maxLength="5"
            android:text=""
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/setting_text_refresh"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginTop="30px"
            android:layout_weight="1"/>
        <Spinner
            android:id="@+id/setting_spin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/refresh"
            android:layout_marginBottom="50px"
            android:layout_weight="1"
            >
        </Spinner>
    </LinearLayout>
</TableLayout>